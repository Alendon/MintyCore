<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="../MintyCore/MintyCore.csproj">
          <AutoGenerated>true</AutoGenerated>
        </ProjectReference>
        <ProjectReference Include="..\MintyCore.Generator\MintyCore.Generator.csproj" ReferenceOutputAssembly="false" OutputItemType="Analyzer" />
    </ItemGroup>






    <ItemGroup>
      <Folder Include="Resources\shaders\" />
    </ItemGroup>






    <ItemGroup>
      <None Remove="Common.registry.json" />
      <AdditionalFiles Include="Common.registry.json" />
    </ItemGroup>

    <ProjectExtensions>
        <MintyCoreMod>
            <Name>TestMod</Name>
            <Id>test</Id>
            <Version>1.0.0</Version>
            <Description>Just a simple mod to test engine features</Description>
            <Authors>Alendon</Authors>
            <IsRootMod>true</IsRootMod>

            <Dependency Id="minty_core" PackageName="MintyCore" />
        </MintyCoreMod>
    </ProjectExtensions>

</Project>
